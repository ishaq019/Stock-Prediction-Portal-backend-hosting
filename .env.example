# ===============================================
# ENVIRONMENT VARIABLES - CONFIGURATION TEMPLATE
# ===============================================
# 
# Copy this file to create your .env file:
#   cp .env.example .env
#
# Then update the values below with your configuration.
# DO NOT commit the .env file to GitHub!
#

# ===============================================
# DJANGO CORE CONFIGURATION
# ===============================================

# Secret key for Django session encryption
# Generate a new one: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# ⚠️ MUST be different for production!
SECRET_KEY=your-generated-secret-key-change-this

# Debug mode
# Set to True for local development, False for production
DEBUG=True

# ===============================================
# DATABASE CONFIGURATION
# ===============================================

# For LOCAL development (SQLite):
#   DATABASE_URL=sqlite:///db.sqlite3

# For PRODUCTION (Neon PostgreSQL):
# Get your connection string from: https://console.neon.tech
# Format: postgresql://USERNAME:PASSWORD@HOST/DATABASE?sslmode=require
DATABASE_URL=sqlite:///db.sqlite3

# ===============================================
# CORS CONFIGURATION  
# ===============================================

# Allow requests from all origins (development only!)
# Set to False in production
CORS_ALLOW_ALL=True

# Specific allowed origins are configured in settings.py
# Includes: localhost, syedishaq.me, GitHub Pages, Vercel domains

# ===============================================
# PRODUCTION SETTINGS (Vercel)
# ===============================================

# Set to True when DATABASE_URL points to production database
PRODUCTION_DATABASE=False

# Allowed hosts (comma-separated)
# Examples: localhost, 127.0.0.1, *.vercel.app, syedishaq.me
ALLOWED_HOSTS=127.0.0.1,localhost,*.localhost

# ===============================================
# OPTIONAL: EXTERNAL SERVICES
# ===============================================
# (Add only if you use these services)

# Stripe Payment Processing
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...

# SendGrid Email Service
# SENDGRID_API_KEY=SG.xxx...

# AWS S3 Storage
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_STORAGE_BUCKET_NAME=...

# Google OAuth
# GOOGLE_OAUTH_CLIENT_ID=...
# GOOGLE_OAUTH_CLIENT_SECRET=...

# ===============================================
# QUICK SETUP CHECKLIST
# ===============================================
# 
# LOCAL DEVELOPMENT:
#   [ ] Generate unique SECRET_KEY
#   [ ] Set DEBUG=True
#   [ ] Set DATABASE_URL=sqlite:///db.sqlite3
#   [ ] Set CORS_ALLOW_ALL=True
#   [ ] Run: python manage.py migrate
#   [ ] Run: python manage.py runserver
#
# PRODUCTION (VERCEL):
#   [ ] Generate unique SECRET_KEY
#   [ ] Set DEBUG=False
#   [ ] Create Neon PostgreSQL database
#   [ ] Set DATABASE_URL to Neon connection string
#   [ ] Set CORS_ALLOW_ALL=False
#   [ ] Add all environment variables to Vercel dashboard
#   [ ] Push code to GitHub
#   [ ] Deploy to Vercel
#   [ ] Test all API endpoints
#
